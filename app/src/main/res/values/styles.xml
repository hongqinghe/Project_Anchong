<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 资料展示页面的字体样式 -->
    <style name="BasicInfoFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!-- 添加收货地址标签字体样式 -->
    <style name="Add_Address_Lable" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!-- 添加收货地址输入字体样式 -->
    <style name="Add_Address_Input" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!-- 订单详情顶部订单状态字体样式 -->
    <style name="order_more_info_head_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="MyDialogTopRight">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Anim_scale</item>
    </style>

    <style name="Anim_scale" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 购买商品时选择商品属性页面的样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 购物车底部导航栏 -->
    <style name="shopping_car_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/goods_price</item>
        <item name="android:text">@string/goods_price</item>
    </style>
    <!-- 购物车选择按钮 -->
    <style name="shopping_car_checkbox">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:button">@drawable/selector_shoppingcar_checkbox</item>
        <item name="android:checked">true</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- 购物车列表XistView -->
    <style name="xlistview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/listview_divider</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:scrollbarSize">4dip</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track</item>
    </style>

    <!--购物车-->
    <style name="shopping_car_item_top">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/goods_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 商机列表下拉组件样式 -->
    <style name="spinner_style">
        <item name="android:background">@drawable/selector_spinner</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="TextViewStyle" parent="TextView.DefaultStyle">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">#26D0EB</item>
    </style>
    <!-- 商城首页广告栏标题字体样式 -->
    <style name="TextStyleGoodsAdvertTitle" parent="TextView.DefaultStyle">
        <item name="android:textColor">#606060</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
