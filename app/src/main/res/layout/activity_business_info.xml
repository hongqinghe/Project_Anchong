<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <ImageView
            android:id="@+id/titlebar_general_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00ff00ff"
            android:src="@drawable/return_back" />


        <Spinner
            android:id="@+id/titlebar_general_spinner"
            style="@style/spinner_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/titleBar_name"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_business"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="net.anchong.app.fragment.BusinessFaBaoFragment"></FrameLayout>
</LinearLayout>