<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_bg"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_talk_headpic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                fresco:placeholderImage="@drawable/icon_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="发布时间"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_community_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/theme"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_community_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="这里是聊聊的主标题"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_community_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_bg"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="这里是正文，最多显示两行"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_community_info_head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:visibility="gone"
            fresco:placeholderImage="@drawable/icon_placeholder"
            fresco:retryImageScaleType="centerCrop"
            fresco:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_community_info_head2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:visibility="gone"
            fresco:placeholderImage="@drawable/icon_placeholder"
            fresco:retryImageScaleType="centerCrop"
            fresco:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_community_info_head3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:visibility="gone"
            fresco:placeholderImage="@drawable/icon_placeholder"
            fresco:retryImageScaleType="centerCrop"
            fresco:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_community_info_head4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:visibility="gone"
            fresco:placeholderImage="@drawable/icon_placeholder"
            fresco:retryImageScaleType="centerCrop"
            fresco:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_community_info_head5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:visibility="gone"
            fresco:placeholderImage="@drawable/icon_placeholder"
            fresco:retryImageScaleType="centerCrop"
            fresco:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_community_info_head6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:visibility="gone"
            fresco:placeholderImage="@drawable/icon_placeholder"
            fresco:retryImageScaleType="centerCrop"
            fresco:viewAspectRatio="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/all_liaoliao" />

    </LinearLayout>


</LinearLayout>