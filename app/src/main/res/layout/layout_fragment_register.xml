<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <net.anchong.app.view.TransparentTitleBarView
        android:id="@+id/gtvv_basicinfo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </net.anchong.app.view.TransparentTitleBarView>

    <EditText
        android:id="@+id/et_register_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_edittext"
        android:hint="账号:请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="25dp"
        android:phoneNumber="true"
        android:textColor="#33000000"
        android:textColorHint="@color/dark_primary"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/login_edittext"
        android:hint="密码:6~16个大小写英文字母、符号或数字"
        android:inputType="textPassword"
        android:maxLength="16"
        android:minLines="6"
        android:paddingLeft="25dp"
        android:phoneNumber="true"
        android:textColor="#33000000"
        android:textColorHint="@color/dark_primary"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_register_captcha"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/login_edittext"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="25dp"
            android:textColor="#33000000"
            android:textColorHint="@color/dark_primary"
            android:textSize="14sp" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_register_captcha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="14sp"
            flatui:fl_borderWidth="2dp"
            flatui:fl_cornerRadius="5dp"
            flatui:fl_fontExtension="ttf"
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            flatui:fl_size="14dp"
            flatui:fl_theme="@array/blood" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="我已阅读并同意安虫用户协议" />

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/btn_register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textColor="@color/theme_bg"
        android:textSize="20sp"
        flatui:fl_borderWidth="2dp"
        flatui:fl_cornerRadius="5dp"
        flatui:fl_fontExtension="ttf"
        flatui:fl_fontFamily="roboto"
        flatui:fl_fontWeight="light"
        flatui:fl_size="20sp"
        flatui:fl_theme="@array/blood" />


</LinearLayout>