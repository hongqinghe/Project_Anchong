<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_myorder"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_tab_allorder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="@string/str_seaallorder"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/userinfo_arror" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <RelativeLayout
            android:id="@+id/ll_mine_tab_obligation"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/tab_bg">

            <ImageView
                android:id="@+id/iv_obligation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:src="@drawable/obligation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:paddingTop="5dp"
                android:text="@string/str_obligations_order"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mine_obligationsOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/iv_obligation"
                android:background="@drawable/round_text_shopcar_number"
                android:gravity="center"
                android:minWidth="14dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_mine_tab_overhang"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/tab_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:src="@drawable/overhang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:paddingTop="5dp"
                android:text="@string/str_wait_send_order"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mine_sendOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/iv_send"
                android:background="@drawable/round_text_shopcar_number"
                android:gravity="center"
                android:minWidth="14dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_mine_tab_receiving"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/tab_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:src="@drawable/receiving" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:paddingTop="5dp"
                android:text="@string/str_wait_receive_order"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mine_receiveOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/iv_receive"
                android:background="@drawable/round_text_shopcar_number"
                android:gravity="center"
                android:minWidth="14dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_mine_tab_after_sales"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/tab_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:src="@drawable/after_sales" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:clickable="false"
                android:text="@string/str_sale_after"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mine_afterOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/iv_after"
                android:background="@drawable/round_text_shopcar_number"
                android:gravity="center"
                android:minWidth="14dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>