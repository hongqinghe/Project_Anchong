<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_bord"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_mine_message"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/mine_massage" />

                    <ImageView
                        android:id="@+id/iv_mine_setting"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/mine_setting" />
                </LinearLayout>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_fragment_mine_headpic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    fresco:placeholderImage="@drawable/icon_placeholder"
                    fresco:roundingBorderColor="@color/white"
                    fresco:roundingBorderWidth="2dp" />
                <!--fresco:roundedCornerRadius="180dp"-->

                <TextView
                    android:id="@+id/tv_fragment_mine_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:text="小白白"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <include layout="@layout/layout_mine_order" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mine_tab_publish"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2sp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/mine_publish" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_publish"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_tab_identification"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2sp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/mine_identification" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_identification"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_tab_shops"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2sp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/mine_shops" />

                        <TextView
                            android:id="@+id/tv_fragment_mine_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_shops"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_tab_order"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/mine_orderform" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_orderform"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_mine_tab_money"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2sp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/mine_money" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_money"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/ll_mine_tab_car"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2sp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_shopcar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:clickable="false"
                            android:src="@drawable/mine_car" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_car"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_mine_shopcar_num"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_marginLeft="-8dp"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/iv_shopcar"
                            android:background="@drawable/round_text_shopcar_number"
                            android:gravity="center"
                            android:minWidth="14dp"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_tab_fans"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="2sp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/mine_fans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_fans"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_mine_tab_help"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@color/tab_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:src="@drawable/mine_help" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingTop="5dp"
                            android:text="@string/str_mine_tab_help"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


    </ScrollView>
</FrameLayout>