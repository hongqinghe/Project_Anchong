<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_bg"
    android:orientation="horizontal">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/tab_bg"-->
    <!--android:orientation="horizontal"-->
    <!--android:paddingLeft="5dp"-->
    <!--android:paddingRight="5dp">-->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_com_headpic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        fresco:placeholderImage="@drawable/icon_placeholder"
        fresco:roundedCornerRadius="180dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="用户昵称"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="发布时间"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_comnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/comment_button" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_community_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/tab_bg"
            android:text="这里是正文，最多显示两行"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/theme_bg" />

        <LinearLayout
            android:id="@+id/ll_reply1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_reply_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小白"
                android:textColor="@color/theme"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reply_comname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小黑"
                android:textColor="@color/theme"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="："
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reply_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reply2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_reply_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小白"
                android:textColor="@color/theme"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reply_comname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小黑"
                android:textColor="@color/theme"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="："
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_reply_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑小黑"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_reply_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多聊聊"
            android:textColor="@color/theme"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <!--</LinearLayout>-->
</LinearLayout>